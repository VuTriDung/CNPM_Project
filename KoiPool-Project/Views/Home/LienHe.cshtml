    <!-- Footer Section -->
    <section class="features">
        <!-- Phần công ty -->
        <div class="featurecard">
            <img src="~/images/Logo.png" alt="Company Logo">
            <h3>CTY KIẾN TRÚC CẢNH QUAN</h3>
            <br>
            <p><i class="fas fa-map-marker-alt"></i> Studio: 439 Kha Vạn Cân, Hiệp Bình Chánh, TP.Thủ Đức</p>
            <p><i class="fas fa-building"></i> Văn phòng: 32 Bác Ái, Bình Thọ, TP. Thủ Đức</p>
            <p><i class="fas fa-industry"></i> Xưởng: 255 Võ Văn Ngân, Linh Chiểu, TP. Thủ Đức</p>
            <p><i class="fas fa-phone-alt"></i> Điện thoại: 0902 520 536</p>
            <p><i class="fas fa-fax"></i> Số Fax: 0968 8947</p>
            <p><i class="fas fa-envelope"></i> Email: info@kdc.com</p>
            <p><i class="fas fa-id-badge"></i> Mã số doanh nghiệp: 0421586682 cấp (30/10/2024)</p>
        </div>

        <!-- Phần Chính sách dịch vụ -->
        <div class="policy-section">
            <h2>CHÍNH SÁCH DỊCH VỤ</h2>
            <ul class="policy-list">
                <li><i class="fas fa-check-circle"></i> Vệ sinh</li>
                <li><i class="fas fa-check-circle"></i> Chăm sóc định kỳ</li>
                <li><i class="fas fa-check-circle"></i> Bảo dưỡng</li>
            </ul>
            <br>
            <!-- Phần Dịch vụ -->
            <h2>DỊCH VỤ</h2>
            <div class="services-list">
                <a asp-action="DichVu" asp-controller="Home">▶ Thiết kế & thi công hồ cá KOI</a>
            </div>
        </div>

        <!-- Phần sản phẩm -->
        <div class="product-section">
            <h2>SẢN PHẨM</h2>
            <div class="product-slider">
                <div class="product-images">
                    <img src="~/images/KOI_1.png" alt="Sản phẩm 1">
                    <img src="~/images/KOI_2.png" alt="Sản phẩm 2">
                    <img src="~/images/KOI_3.png" alt="Sản phẩm 3">
                    <img src="~/images/KOI_4.png" alt="Sản phẩm 4">
                    <img src="~/images/KOI_5.png" alt="Sản phẩm 5">
                </div>
            </div>
        </div>
        <!-- Phần Liên hệ báo giá -->
        <div class="contact-section">
            <h2>LIÊN HỆ BÁO GIÁ</h2>
            <a class="hotline" href="#">HOTLINE: 0978 855 597</a>
            <p><b>Gửi yêu cầu báo giá</b></p>
        </div>
    </section>

