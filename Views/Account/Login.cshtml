@model KoiPool_Project.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login User";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <div class="container">
        <div class="login form">
            <header>Login</header>

            <!-- Hiển thị Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary-errors text-danger">
                    @Html.ValidationSummary(true)
                </div>
            }

            <form asp-action="Login" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <button type="submit" class="button">Login</button>
            </form>

            <div class="signup">
                <span class="signup">
                    Don't have an account?
                    <a asp-action="Create">Signup</a>
                </span>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
